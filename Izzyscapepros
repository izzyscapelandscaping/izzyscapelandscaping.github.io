  function calculate() {

    let service = document.getElementById("service");
    let plan = Number(document.getElementById("plan").value);
    let size = Number(document.getElementById("size").value);

    let total = 0;

    for (let opt of service.selectedOptions) {
      total += Number(opt.value);
    }

    total += plan;
    total *= size;

    document.getElementById("total").innerText = total.toFixed(2);
  }

  function pay() {
    let total = document.getElementById("total").innerText;

    if (total == "0") {
      alert("Please calculate first");
      return;
    }

    alert("Demo payment: $" + total + " charged. Thank you!");
  }

  function addReview() {

    let name = document.getElementById("rname").value;
    let text = document.getElementById("rtext").value;

    if (!name || !text) {
      alert("Fill out all fields");
      return;
    }

    let div = document.createElement("div");
    div.className = "review";
    div.innerHTML = "<strong>" + name + "</strong><p>â˜…â˜…â˜…â˜…â˜… " + text + "</p>";

    document.getElementById("reviewList").appendChild(div);

    document.getElementById("rname").value = "";
    document.getElementById("rtext").value = "";
  }
</script></body>
